{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "target": "es5",
    "sourceMap": true,
    "baseUrl": ".",
    "lib": [
      "es2015",
      "dom"
    ],
    "paths": {
    },
    "checkJs": false,
    "watch": true,
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}